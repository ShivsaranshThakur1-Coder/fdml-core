    <part id="p-I" label="Part I" repeat="1">
      <figure id="f-I" name="Simple pattern" formation="line">
        <measureRange from="1" to="2">
          <step who="all"
                action="Step R to side, close L to R, step R in place"
                beats="4"
                startFoot="R"
                direction="Right"
                facing="Centre"/>
        </measureRange>
      </figure>
    </part>

    <sequence id="seq-main">
      <use figure="f-I" repeat="1"/>
    </sequence>

