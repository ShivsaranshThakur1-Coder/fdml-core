<?xml version='1.0' encoding='utf-8'?>
<fdml version="1.2">
  <meta>
    <title>Mayim Mayim (v1.2 geometry example)</title>
    <dance name="Mayim Mayim" />
    <origin country="UNKNOWN" />
    <type genre="circle" />
    <meter value="4/4" />
    <tempo bpm="120" />
    <formation text="circle" />

    <geometry>
      <formation kind="circle" />
      <roles>
        <role id="all" />
      </roles>
    </geometry>
  </meta>

  <body>
    <geometry>
      <circle>
        <order role="all" />
      </circle>
    </geometry>

    <figure id="f-p3" name="Part 3 (excerpt)">
      <step who="all" action="face" beats="1" facing="left" startFoot="R">
        <geo>
          <primitive kind="face" frame="formation" dir="counterclockwise" />
        </geo>
      </step>
      <step who="all" action="run" beats="3" direction="around" startFoot="R">
        <geo>
          <primitive kind="move" frame="formation" axis="tangent" dir="counterclockwise" amount="3" unit="steps" preserveOrder="true" />
        </geo>
      </step>
      <step who="all" action="face" beats="1" facing="center" startFoot="R">
        <geo>
          <primitive kind="face" frame="formation" dir="center" />
        </geo>
      </step>
    </figure>
  </body>
</fdml>