<?xml version='1.0' encoding='utf-8'?>
<fdml version="1.2">
  <meta>
    <title>Contra â€” Longways Set (progress order)</title>
    <dance name="Contra" />
    <meter value="4/4" />
    <tempo bpm="112" />
    <geometry>
      <formation kind="line" />
      <roles>
        <role id="all" />
        <role id="both" />
        <role id="d1" />
        <role id="d2" />
        <role id="d3" />
        <role id="d4" />
      </roles>
    </geometry>
  </meta>

  <body>
    <geometry>
      <line id="line1">
        <order phase="initial">
          <slot who="d1" />
          <slot who="d2" />
          <slot who="d3" />
          <slot who="d4" />
        </order>
        <order phase="after">
          <slot who="d2" />
          <slot who="d3" />
          <slot who="d4" />
          <slot who="d1" />
        </order>
      </line>
    </geometry>

    <figure id="f-forward" name="Forward &amp; Back" formation="longways">
      <step who="both" action="Forward" beats="2" count="1-2" startFoot="L" facing="Partner">
        <geo>
          <primitive kind="move" who="both" />
          <primitive kind="progress" who="all" delta="1" />
        </geo>
      </step>
      <step who="both" action="Back" beats="2" count="3-4" startFoot="R" facing="Partner">
        <geo>
          <primitive kind="move" who="both" />
        </geo>
      </step>
    </figure>
  </body>
</fdml>
