<?xml version="1.0" encoding="UTF-8"?>
<fdml version="1.0">
  <meta>
    <title>Circle Waltz â€” Teaching Set</title>
    <dance name="Circle Waltz"/>
    <meter value="3/4"/>
    <tempo bpm="90"/>
  </meta>
  <body>
    <figure id="f-basic" name="Basic Step" formation="circle">
      <step who="both" action="Step L" beats="1" count="1" startFoot="L"/>
      <step who="both" action="Close R" beats="1" count="2" startFoot="R" endFoot="B"/>
      <step who="both" action="Step L" beats="1" count="3" startFoot="L"/>
    </figure>
    <figure id="f-turn" name="Quarter Turn CW" formation="circle">
      <step who="both" action="Step R" beats="1" count="1" startFoot="R" direction="CW"/>
      <step who="both" action="Close L" beats="1" count="2" startFoot="L" endFoot="B" direction="CW"/>
      <step who="both" action="Step R" beats="1" count="3" startFoot="R" direction="CW"/>
    </figure>
    <sequence name="Teaching Set">
      <use figure="f-basic" repeat="2"/>
      <use figure="f-turn" repeat="2"/>
    </sequence>
  </body>
</fdml>
